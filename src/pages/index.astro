---
// Style Imports
import "../styles/global.css";
import "../styles/output.css";
// Component Imports
import Tour from "../components/Tour.astro";
import Nav from "../components/Nav.astro";
// You can import components from any supported Framework here!

// Component Script:
// You can write any JavaScript/TypeScript that you'd like here.
// It will run during the build, but never in the browser.
// All variables are available to use in the HTML template below.
let title = "By Elements";
---

<html
  lang="en"
  style="font-family: 'GeoSansLight', ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont;"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <script
      src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js"
      defer></script>
  </head>
  <body>
    <Nav />
    <main>
      <hero
        class="w-screen h-screen relative flex flex-col justify-center items-center"
      >
        <div
          class="absolute top-0 right-0 bottom-0 left-0 w-full h-full bg-bye-grey z-0"
        >
        </div>
        <div class="relative z-10 p-10">
          <h2 class="text-4xl leading-relaxed text-center">
            Modern shapes combined with traditional Indonesian craftsmanship.
          </h2>
        </div>
      </hero>
      <div class="h-40"></div>
    </main>
  </body>
</html>
